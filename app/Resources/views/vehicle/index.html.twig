{% extends 'base.html.twig' %}

{% block content %}

<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title">Vehicles list</h5>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>
                <li><a data-action="close"></a></li>
            </ul>
        </div>
    </div>

    <div class="panel-body">
        <span title="Create a new vehicle" class="pull-right"><a href="{{ path('vehicle_new') }}" class="btn btn-labeled btn-labeled-left bg-blue heading-btn"><b><i class="icon-plus3"></i></b> Ajouter</a></span>
    </div>

    <table class="table datatable-responsive table-bordered table-hover datatable-highlight">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mat</th>
                <th>Kilometrage</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td><a href="{{ path('vehicle_show', { 'id': vehicle.id }) }}">{{ vehicle.id }}</a></td>
                <td>{{ vehicle.mat }}</td>
                <td>{{ vehicle.kilometrage }}</td>
                <td>{{ vehicle.type }}</td>
                <td class="text-center">
                    <div class="">
                        <a title="Afficher les détails" href="{{ path('vehicle_show', { 'id': vehicle.id }) }}" class="text-primary legitRipple"><i class="icon-eye position-left"></i></a>
                        <a title="Modifier" href="{{ path('vehicle_edit', { 'id': vehicle.id }) }}" class="text-primary legitRipple"><i class="icon-pen position-left"></i></a>
                        <a title="Supprimer" onclick="return confirm('Êtes-vous sûr ? Cette action est irréversible.');" href="{{ path('vehicle_delete', { 'id': vehicle.id }) }}" class="text-danger legitRipple"><i class="icon-trash position-left"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
